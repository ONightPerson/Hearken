    <com.onightperson.hearken.wave.Wave
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"/>
    
    <RelativeLayout
        android:id="@+id/text_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/wave"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/protected_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持续保护"
                android:textColor="#66000000"
                android:textSize="13dp"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/protected_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#66000000"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/protected_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="#66000000"
                android:textSize="13dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>



        <View
            android:layout_width="120px"
            android:layout_height="1px"
            android:layout_toLeftOf="@id/text_layout"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:background="#19000000"/>

        <View
            android:layout_width="120px"
            android:layout_height="1px"
            android:layout_toRightOf="@id/text_layout"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="#19000000"/>
    </RelativeLayout>
</com.onightperson.hearken.wave.BottomLayout>